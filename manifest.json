{
  "manifest_version": 2,
  "name": "Boozang",
  "description": "This extension launches the Boozang tool.",
  "version": "1.0",
  "icons": { 
    "16": "boozang16.png",
    "48": "boozang48.png",
    "128": "boozang128.png"
  },

  "browser_action": {
    "default_icon": "boozang.png",
    "defualt_title": "Launch Boozang",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}